<div class="form-group image-container">
  <label><%= t ".image" %></label>
  <%= f.fields_for :images do |i| %>
    <div class="flex-box">
      <% if i.object.image? %>
        <%= i.label :image do %>
          <%= image_tag i.object.image.small_thumb.url,
            class: "animation-resize img-margin" %>
        <% end %>
      <% end %>
      <%= i.file_field :image, class: "form-control-file" %>
      <button type = "button"
        class="btn btn-default btn-circle delete-btn animation-resize">
        <i class="fa fa-trash"></i>
      </button>
    </div>

  <% end %>
</div>
<div class="form-group">
  <button type="button" id="add_js_btn" class="btn bg-transparent">
    <i class="fa fa-plus fa-lg"></i>
  </button>
</div>
