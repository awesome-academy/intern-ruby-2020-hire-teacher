<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to managers_rooms_path do %>
      <i class="fa fa-bar-chart-o fa-fw"></i> <%= t ".table_name" %>
    <% end %>
    <div class="pull-right">
      <div class="btn-group">
        <%= link_to new_managers_room_path, class: "btn btn-success btn-xs animation-resize" do %>
          <i class="fa fa-plus"></i> <%= t ".add_new" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <% if @rooms.present? %>
            <table class="table table-bordered table-hover table-striped" id="rooms-table">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".address" %></th>
                  <th><%= t ".location" %></th>
                  <th><%= t ".country" %></th>
                  <th><%= t ".created_at" %></th>
                  <th><%= t ".updated_at" %></th>
                  <th><%= t ".edit" %></th>
                  <th><%= t ".delete" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @rooms %>
              </tbody>
            </table>
            <%= paginate @rooms, theme: "twitter-bootstrap-3" %>
            <p class="help-block">
              <%= t(".total_record") %>: <%= @rooms.total_count %> -
              <%= page_sum @rooms %>
            </p>
            <p class="help-block"><%= record_sum @rooms %></p>
          <% else %>
            <p class="help-block"><%= t ".no_room" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
