<% provide :title, t("header.room") %>
<% provide :id_page, "room" %>
<div class="page-heading about-heading header-text" style="background-image: url(assets/images/heading-6-1920x500.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-content">
          <!-- dòng này chỉ mang tính giao diện  -->
          <h4>Security / Protective Services Jobs</h4>
          <h2>Security Officer - Luxury Retail</h2>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="products">
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-sm-8">
        <p class="lead">
          <i class="fa fa-map-marker"></i> <%= [@room.location.country_name,@room.location.name,@room.address].join(" - ") %> &nbsp;&nbsp;
        </p>
        <br>
        <br>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class=calender_content">
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="section-heading">
          <h2><%= t "report_room" %></h2>
        </div>
        <p class="lead">
          <i class="fa fa-map-marker"></i> <%= @room.name %>
        </p>
        <br>
        <%= render "business/reports/report_form", room: @room, parent_id: nil, report_new: @report %>
        <div class="box-report">
          <%= reports_tree_for @room.reports.hash_tree(limit_depth: 2),
            @room, Report.new %>
        </div>
        <div class="col-md-3">
          <div class="section-heading">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
