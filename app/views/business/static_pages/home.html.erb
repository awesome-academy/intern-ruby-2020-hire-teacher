      </div>
    </div>
  </div>
</div>
<div class="services prafix" >
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-heading">
          <h2><%= t ".history_book_room" %></h2>
          <%= link_to business_history_path(current_user), class: "btn_history" do %>
            <%= t ".read_more" %><i class="fa fa-angle-right"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% if @events.any? %>
        <% (0..2).each do |i| %>
          <div class="col-md-12">
            <% if @events[i] %>
            <%= render "business/history/history_event", event: @events[i], i: i %>
            <% end %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
