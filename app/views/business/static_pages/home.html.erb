<% provide :title, t("header.home") %>
<% provide :page, "home" %>
<!-- Banner Starts Here -->
<div class="page-heading about-heading header-text heading_about_page">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-content">
          <h4><%= t ".about" %></h4>
          <h2><%= t ".content_heading_about" %></h2>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Banner Ends Here -->
<div class="latest-products">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-heading">
          <h2><%= t ".list_room" %></h2>
          <%= link_to business_rooms_path do %>
            <%= t ".read_more" %><i class="fa fa-angle-right"></i>
          <% end %>
        </div>
      </div>
      <% if @rooms.any? %>
        <% (0..2).each do |i| %>
          <div class="col-md-4">
            <%= render @rooms[i] %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<!-- Unused -->
